@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<!-- Basic Bootstrap Table -->
<div class="card">
    <h5 class="card-header">Yorum Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kullanıcı</th>
                    <th>Rota</th>
                    <th>Tarih</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.CommentUser</td>
                        <td>@item.Destination.City</td>
                        <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                        <td><a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger"><i class="bx bx-x"></i> Sil</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
