@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Api Ziyaretçi Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Şehir</th>
                    <th>Ülke</th>
                    <th>Mail</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {

                    <tr>
                        <th>@item.VisitorID</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.City</td>
                        <td>@item.Country</td>
                        <td>@item.Mail</td>
                        <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorID" class="btn btn-outline-danger"><i class="bx bx-box"></i> Sil</a></td>
                        <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID" class="btn btn-outline-primary"> Güncelle</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-info mt-3">Yeni Ziyaretçi Ekle</a>
