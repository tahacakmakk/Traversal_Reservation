@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası</h1>

<form method="post">
    @for(int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID">
            <input type="hidden" asp-for="@Model[i].RoleName">
            <input type="checkbox" asp-for="@Model[i].RoleExit" class="form-check-input">
            <label class="form-check-label" for="@Model[i].RoleExit">@Model[i].RoleName</label>
        </div>
    
    }
    <button class="btn btn-outline-primary"> Değişiklikleri Kaydet</button>
</form>