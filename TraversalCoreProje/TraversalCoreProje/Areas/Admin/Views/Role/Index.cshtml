@model List<AppRole>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<div class="card">
	<h5 class="card-header">Rol Listesi</h5>
	@if (Model.Count > 0)
	{
		<div class="table-responsive text-nowrap">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Rol Adı</th>
						<th>Sil</th>
						<th>Güncelle</th>
					</tr>
				</thead>

				<tbody class="table-border-bottom-0">
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.Name</td>
							<td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}

				</tbody>
				
			</table>
		</div>

	}
	else
	{
		<div class="alert alert-danger text-center mb-0">
			<span class="text-center">Herhangi bir rol bulunamadı !</span>
		</div>
	}
</div>
<a href="/Admin/Role/CreateRole/" class="btn btn-success mt-2"> Yeni Rol Ekle</a>
