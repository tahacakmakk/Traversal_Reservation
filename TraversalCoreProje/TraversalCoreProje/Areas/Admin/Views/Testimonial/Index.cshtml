@model List<Testimonial>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<div class="card">
	<h5 class="card-header">Rehber Listesi</h5>
	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Görsel</th>
					<th>Ad Soyad</th>
					<th style="max-width:700px;">Açıklama</th>
					<th>Durum</th>
					<th>Düzenle</th>
				</tr>
			</thead>
			<tbody class="table-border-bottom-0">
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<td>@count</td>
						<td style="max-width:100px;"><img src="@item.ClientImage" style="max-width:80px; border-radius:50%" /></td>
						<td >@item.Client </td>
						<td style ="max-width:700px;">@item.Comment</td>

						@{
							if (item.Status == true)
							{
								<td> <a href="/Admin/Testimonial/ChangeToFalse/@item.TestimonialID" class="btn btn-danger">Pasif Yap</a> </td>
							}
							else
							{
								<td> <a href="/Admin/Testimonial/ChangeToTrue/@item.TestimonialID" class="btn btn-success">Aktif Yap</a> </td>
							}
						}

						<td><a href="/Admin/Testimonial/EditTestimonial/@item.TestimonialID" class="btn btn-outline-info">Düzenle</a></td>


					</tr>
				}

			</tbody>
		</table>
	</div>
</div>
<a href="/Admin/Testimonial/AddTestimonial/" class="btn btn-success mt-2"> Yeni Referans Ekle</a>
