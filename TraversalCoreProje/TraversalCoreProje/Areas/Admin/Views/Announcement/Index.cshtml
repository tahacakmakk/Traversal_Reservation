@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="card">
    <h4 class="card-header"> Duyuru Listesi</h4>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>İçerik</th>
                    <th>Sil</th>
                    <th>Detaylar</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>

                        <th>@count</th>
                        <td>@item.Title</td>
                        <td>@item.Content</td>
                        <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-outline-dark">Detaylar</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
        <a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-outline-info mt-3">Duyuru Ekle</a>

