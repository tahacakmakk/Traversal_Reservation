@model AnnouncementUpdateDto
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl">
	<div class="card mb-4">
		<div class="card-header d-flex justify-content-between align-items-center">
			<h5 class="mb-0">Duyuru Güncelle</h5>
		</div>
		<div class="card-body">
			<form method="post">
				<input type="hidden" asp-for="AnnouncementID"/>
				<div class="mb-3">
					<label class="form-label" for="basic-default-fullname">Başlık</label>
					<input type="text" asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label class="form-label" for="basic-default-message">Açıklama</label>
					<textarea asp-for="Content" rows="3" class="form-control"></textarea>
					<span asp-validation-for="Content" class="text-danger"></span>
				</div>
				<button class="btn btn-success">Güncelle</button>
			</form>
		</div>
	</div>
</div>


