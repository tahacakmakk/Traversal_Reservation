@model List<Reservation>
@{
    ViewData["Title"] = "ApprovalReservation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<!-- Basic Bootstrap Table -->
<div class="card">
    <h5 class="card-header font-weight-bold ">Onay Bekleyen Rezervasyonlar</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kullanıcı Adı</th>
                    <th>Rota</th>
                    <th>Kişi Sayısı</th>
                    <th>Rezervasyon Tarihi</th>
                    <th>Açıklama</th>
                    <th>Onayla</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.AppUser.Name</td>
                        <td>@item.Destination.City</td>
                        <td>@item.PersonCount</td>
                        <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
                        <td>@item.Description</td>
                        <td><a href="/Admin/Reservation/ToApprove/@item.ReservationID" class="btn btn-outline-success"><i class="bx bx-double-check"></i> Onayla</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
