@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Yeni Rota Oluşturma Sayfası</h1>
<form method="post">
 
    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="text" asp-for="DayNight" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Görsel")
        <input type="text" asp-for="Image" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Kapak Resmi")
        <input type="text" asp-for="CoverImage" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Detay 1")
        <input type="text" asp-for="Details1" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Detay 2")
        <input type="text" asp-for="Details2" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Görsel 2")
        <input type="text" asp-for="Image2" class="form-control mb-3" />
    </div>
    <div class="form-group">
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x=>x.Description,3,10,new{@class="form-control"})
    </div>
    <button class="btn btn-outline-success mt-3">Rota Ekle </button>

</form>
